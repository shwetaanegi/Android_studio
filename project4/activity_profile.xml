<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <!-- Cover Photo -->
    <ImageView
        android:id="@+id/cover_photo"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="#0A66C2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:background="@android:color/darker_gray"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Vansh Madaan"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <!-- Headline -->
    <TextView
        android:id="@+id/profile_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Student | MCA Candidate | Aspiring AI Engineer"
        android:textSize="16sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <!-- Barrier -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/header_barrier"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="profile_image,profile_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_open_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open to"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/header_barrier"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/btn_add_section"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <Button
        android:id="@+id/btn_add_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add section"
        android:textAllCaps="false"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/btn_open_to"
        app:layout_constraintBottom_toBottomOf="@id/btn_open_to"
        app:layout_constraintStart_toEndOf="@id/btn_open_to"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <!-- Connections -->
    <TextView
        android:id="@+id/tv_connections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500+ connections"
        android:textStyle="bold"
        android:textColor="#0A66C2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_open_to"
        app:layout_constraintStart_toStartOf="@id/guideline_start" />

</androidx.constraintlayout.widget.ConstraintLayout>
